<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../Schemas/TradeColumnDef.xsd">
	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeIconDef</defName>
		<label>icon</label>
		<description>A small image of what you are trading.</description>
		<showCaption>false</showCaption>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnIcon:Draw</callbackHandler>
		<defaultWidth>40</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeInfoDef</defName>
		<label></label>
		<tooltip>info button</tooltip>
		<description>Button to open the info window.</description>
		<showCaption>false</showCaption>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnInfo:Draw</callbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnInfo:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnInfo:PostClosed</postClosedCallbackHandler>
		<defaultWidth>20</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeCaptionDef</defName>
		<label>caption</label>
		<description>Shows the name.</description>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCaption:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCaption:OrderbyValue</orderValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCaption:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCaption:PostClosed</postClosedCallbackHandler>
		<initialSort>Ascending</initialSort>
		<defaultWidth>1</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeExtraIconsDef</defName>
		<label>extra icons</label>
		<description>Additional icons shown in different situations.</description>
		<showCaption>false</showCaption>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnExtraIcons:Draw</callbackHandler>
		<searchValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnExtraIcons:SearchValue</searchValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnExtraIcons:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnExtraIcons:PostClosed</postClosedCallbackHandler>
		<defaultWidth>50</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeQuantityDef</defName>
		<label>available</label>
		<description>Quantity available for buying or selling.</description>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnQuantity:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnQuantity:OrderbyValue</orderValueCallbackHandler>
		<defaultWidth>75</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradePriceDef</defName>
		<label>price</label>
		<description>Shows the price.</description>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPrice:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPrice:OrderbyValue</orderValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPrice:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPrice:PostClosed</postClosedCallbackHandler>
		<defaultWidth>75</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeCounterDef</defName>
		<label>counter box</label>
		<description>Numeric box where the current quantity bought or sold is shown and can be entered manually.</description>
		<showCaption>false</showCaption>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounter:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounter:OrderbyValue</orderValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounter:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounter:PostClosed</postClosedCallbackHandler>
		<defaultWidth>80</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeButtonsDef</defName>
		<label>buttons</label>
		<showCaption>true</showCaption>
		<description>Buttons used to increment or decrement the amount bought or sold.\nClicking the double arrow buttons will increase to most affordable by either party on first click and then to max quantity if clicked again. Hold shift to skip.</description>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnButtons:Draw</callbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnButtons:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnButtons:PostClosed</postClosedCallbackHandler>
		<defaultWidth>90</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>
</Defs>