<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../Schemas/TradeColumnDef.xsd">
	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colDurabilityDef</defName>
		<label>d</label>
		<tooltip>Durability</tooltip>
		<description>Shows the remaining hitpoints (if any) as a percentage.</description>
		<defaultWidth>40</defaultWidth>
		<defaultVisible>false</defaultVisible>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnDurability:PostClosed</postClosedCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnDurability:PostOpen</postOpenCallbackHandler>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnDurability:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnDurability:OrderbyValue</orderValueCallbackHandler>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colPricePerWeightDef</defName>
		<label>/kg</label>
		<tooltip>price / kg</tooltip>
		<description>Shows the price divided by mass.</description>
		<defaultWidth>50</defaultWidth>
		<defaultVisible>false</defaultVisible>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPricePerWeight:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPricePerWeight:OrderbyValue</orderValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPricePerWeight:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnPricePerWeight:PostClosed</postClosedCallbackHandler>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colTradeCounterLabelDef</defName>
		<label>counter box</label>
		<description>A faster read-only version of the counter box where the current quantity bought or sold is shown.</description>
		<showCaption>false</showCaption>
		<defaultVisible>false</defaultVisible>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounterLabel:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounterLabel:OrderbyValue</orderValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounterLabel:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCounterLabel:PostClosed</postClosedCallbackHandler>
		<defaultWidth>80</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>

	<DynamicTradeInterface.Defs.TradeColumnDef>
		<defName>colCategoryDef</defName>
		<label>category</label>
		<description>Shows the main category of the thing.</description>
		<showCaption>true</showCaption>
		<defaultVisible>false</defaultVisible>
		<callbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCategory:Draw</callbackHandler>
		<orderValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCategory:OrderbyValue</orderValueCallbackHandler>
		<searchValueCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCategory:SearchValue</searchValueCallbackHandler>
		<postOpenCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCategory:PostOpen</postOpenCallbackHandler>
		<postClosedCallbackHandler>DynamicTradeInterface.UserInterface.Columns.ColumnCategory:PostClosed</postClosedCallbackHandler>
		<defaultWidth>80</defaultWidth>
	</DynamicTradeInterface.Defs.TradeColumnDef>
</Defs>